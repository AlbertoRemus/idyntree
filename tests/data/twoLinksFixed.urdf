<robot name="twoLinks">
    <link name="base_link" />
   <joint name="base_fixed_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 -0 0" />
        <axis xyz="0 0 0" />
        <parent link="base_link" />
        <child link="link1" />
    </joint>
    <link name="link1">
        <inertial>
            <mass value="1" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
        </inertial>
    </link>
    <joint name="joint_1_2" type="fixed">
        <origin xyz="0 0 0" rpy="0 -0 0" />
        <parent link="link1" />
        <child link="link2" />
    </joint>
    <link name="link2">
        <inertial>
            <mass value="1" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
        </inertial>
    </link>
    <sensor name="dummy_accl1" type="accelerometer">
        <parent type="link">link1</parent>
        <pose xyz="0 -0.01 +0.01" rpy="0.01 -0.5 0.5" />
    </sensor> 
    <sensor name="dummy_gyro" type="gyroscope">
        <parent type="link">link2</parent>
        <pose xyz="0 -0.01 +0.01" rpy="0 -0 0" />
    </sensor>
    <sensor name="dummy_accl2" type="accelerometer">
        <parent type="link">link2</parent>
    </sensor>
</robot>
