set_and_check(iDynTree_INCLUDEDIR "@PACKAGE_iDynTree_INCLUDEDIR@")

if(NOT TARGET iDynTree::idyntree)
  include("${CMAKE_CURRENT_LIST_DIR}/iDynTreeTargets.cmake")
endif()

# Compatibility
